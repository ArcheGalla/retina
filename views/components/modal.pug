.modal.fade(id="theses-modal", tabindex="-1", role="dialog")
    .modal-dialog.modal-lg(role="document")
        form.modal-content(name="themesForm", onsubmit="return false")
            .modal-header
                button.close(type="button", data-dismiss="modal", aria-label="Close")
                    span(aria-hidden="true") Ã—
                h4.modal-title #{__("THEMES_MODAL.TITLE")}
            .modal-body
                .container-fluid
                    .row
                        .col-xs-12.col-sm-6.col-md-6.col-lg-6
                            .form-group
                                label(for="name") #{__("THEMES_MODAL.NAME")}
                                - var namePlaceholder = __('THEMES_MODAL.NAME');
                                input.form-control(id="name", name="name", type="text", placeholder=`${namePlaceholder}`, aria-describedby="name", required="true", autofocus="true")
                        .col-xs-12.col-sm-6.col-md-6.col-lg-6
                            .form-group
                                label(for="surname") #{__("THEMES_MODAL.SURNAME")}
                                - var surnamePlaceholder = __('THEMES_MODAL.SURNAME');
                                input.form-control(id="surname", name="surname", type="text", placeholder=`${surnamePlaceholder}`, aria-describedby="surname", required="true")

                    .row
                        .col-xs-12.col-sm-6.col-md-6.col-lg-6
                            .form-group
                                label(for="position") #{__('THEMES_MODAL.POSITION')}
                                select.form-control(id="position", aria-describedby="position", required="true")
                                    option #{__('THEMES_MODAL.POSITION_OPTIONS.PROFESSOR')}
                                    option #{__('THEMES_MODAL.POSITION_OPTIONS.DOCTOR')}
                                    option #{__('THEMES_MODAL.POSITION_OPTIONS.DOCENT')}
                                    option #{__('THEMES_MODAL.POSITION_OPTIONS.ASSISTANT')}
                        .col-xs-12.col-sm-6.col-md-6.col-lg-6
                            .form-group
                                label(for="place") #{__('THEMES_MODAL.PLACE')}
                                select.form-control(id="place", aria-describedby="place", required="true")
                                    option #{__('THEMES_MODAL.PLACE_OPTIONS.CLINIC')}
                                    option #{__('THEMES_MODAL.PLACE_OPTIONS.UNIVERSITY')}

                    .row
                        .col-xs-12.col-sm-6.col-md-6.col-lg-6
                            .form-group
                                label(for="city") #{__('THEMES_MODAL.CITY')}
                                - var cityPlaceholder = __('THEMES_MODAL.CITY')
                                input.form-control(id="city", type="text", placeholder=`${cityPlaceholder}`, aria-describedby="city", required="true")
                        .col-xs-12.col-sm-6.col-md-6.col-lg-6
                            .form-group
                                label(for="country") #{__('THEMES_MODAL.COUNTRY')}
                                - var countryPlaceholder = __('THEMES_MODAL.COUNTRY')
                                input.form-control(id="country", type="text", placeholder=`${countryPlaceholder}`, aria-describedby="country", required="true")

                    .row
                        .col-xs-12.col-sm-6.col-md-6.col-lg-6
                            .form-group
                                label(for="email") Email
                                input.form-control(id="email", type="email", placeholder="Email", aria-describedby="email", required="true")
                        .col-xs-12.col-sm-6.col-md-6.col-lg-6
                            .form-group
                                label(for="phone") #{__('THEMES_MODAL.PHONE')}
                                - var phonePlaceholder = __('THEMES_MODAL.PHONE');
                                input.form-control(id="phone", type="tel", placeholder=`${phonePlaceholder}`, aria-describedby="phone", required="true")

                    .row
                        .col-xs-12.col-sm-6.col-md-6.col-lg-6
                            .form-group
                                label(for="these-name") #{__('THEMES_MODAL.THEME_NAME')}
                                - var themeNamePlaceholder = __('THEMES_MODAL.THEME_NAME');
                                input.form-control(id="these-name", type="text", placeholder=`${themeNamePlaceholder}`, aria-describedby="these-name", required="true")
                        .col-xs-12.col-sm-6.col-md-6.col-lg-6
                            .form-group
                                label(for="description") #{__('THEMES_MODAL.THEME_TEXT')}
                                - var themeTextPlaceholder = __('THEMES_MODAL.THEME_TEXT');
                                textarea.form-control(id="description", placeholder=`${themeTextPlaceholder}`, aria-describedby="theme-description", required="true")

            .modal-footer
                button.btn.btn-default(type="button", data-dismiss="modal") #{__('THEMES_MODAL.CLOSE')}
                button.btn.btn-primary(type="submit") #{__('THEMES_MODAL.SEND')}
